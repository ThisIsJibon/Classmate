<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXPasswordField?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="classmatedemo.ManageThreadController">
   <children>
      <Pane prefHeight="530.0" prefWidth="718.0" styleClass="root" stylesheets="@dark-theme.css">
         <children>
            <JFXTextField fx:id="userRegistrationField" focusColor="#2b2b52" layoutX="139.0" layoutY="197.0" prefHeight="40.0" prefWidth="201.0" promptText="Registration number" styleClass="textfield" unFocusColor="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </JFXTextField>
            <JFXButton fx:id="addUserButton" layoutX="375.0" layoutY="216.0" onAction="#addUserButtonAction" prefHeight="27.0" prefWidth="86.0" styleClass="login-button" text="Add user" />
            <JFXButton fx:id="removeUserButton" layoutX="487.0" layoutY="216.0" onAction="#removeUserButtonAction" styleClass="login-button" text="Remove user" />
            <TextField fx:id="updateDescriptionField" layoutX="139.0" layoutY="263.0" prefHeight="94.0" prefWidth="438.0" promptText="Update Description" />
            <JFXTextField fx:id="threadNameField" focusColor="#2b2b52" layoutX="139.0" layoutY="117.0" prefHeight="40.0" prefWidth="201.0" promptText="Thread name" styleClass="textfield" unFocusColor="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </JFXTextField>
            <JFXButton fx:id="closeButton" layoutX="375.0" layoutY="419.0" onAction="#closeButtonAction" prefHeight="57.0" prefWidth="144.0" text="   Close">
               <graphic>
                  <ImageView fitHeight="34.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/icons8_delete_48px.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXPasswordField fx:id="threadPassField" layoutX="139.0" layoutY="158.0" prefHeight="40.0" prefWidth="201.0" promptText="Thread Password" styleClass="textfield">
               <font>
                  <Font size="15.0" />
               </font>
            </JFXPasswordField>
            <JFXButton fx:id="updateButton" layoutX="231.0" layoutY="419.0" onAction="#updateButtonAction" prefHeight="57.0" prefWidth="144.0" text="   Update">
               <graphic>
                  <ImageView fitHeight="34.0" fitWidth="23.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@icons/1.png" />
                     </image>
                  </ImageView>
               </graphic>
            </JFXButton>
            <JFXTextField fx:id="threadYearField" focusColor="#2b2b52" layoutX="375.0" layoutY="117.0" prefHeight="40.0" prefWidth="201.0" promptText="Thread year" styleClass="textfield" unFocusColor="WHITE">
               <font>
                  <Font size="15.0" />
               </font>
            </JFXTextField>
         </children>
      </Pane>
   </children>
</AnchorPane>